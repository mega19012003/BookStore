@model WebBookStore.Models.Book
<h2>Chi tiết sách</h2>

<div>
    <p><strong>Tiêu đề:</strong> @Model.Title</p>
    <p><strong>Giá:</strong> @Model.Price.ToString("N0") ₫</p>
    <p><strong>Giảm giá:</strong> @Model.DiscountPrice?.ToString("N0") ₫</p>
    <p><strong>Tác giả:</strong> @Model.Author?.Name</p>
    <p><strong>Thể loại:</strong> @Model.Category?.Name</p>
    <p><strong>NXB:</strong> @Model.Publisher?.Name</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>

    <p><strong>Ảnh bìa:</strong><br /><img src="@Model.CoverUrl" width="150" /></p>
    <p><strong>Ảnh thư viện:</strong></p>
    <br />
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>

