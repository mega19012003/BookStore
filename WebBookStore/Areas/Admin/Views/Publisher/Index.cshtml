@model IEnumerable<WebBookStore.Models.Publisher>

@{
    ViewData["Title"] = "Danh sách nhà xuất bản";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách tác giả</h1>

    <!-- Nút thêm mới -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var publisher in Model)
                        {
                            <tr>
                                <td>
                                    @publisher.Name
                                    @if (publisher.IsDeleted)
                                    {
                                        <span class="text-danger">(đã xoá mềm)</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = publisher.Id })">Sửa</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = publisher.Id })">Xoá</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}