@model WebBookStore.Models.Author

<h2>Cập nhật tác giả</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh đại diện hiện tại:</label><br />
        <img src="@Model.AvatarUrl" style="max-height:150px; margin-bottom:10px;" />
    </div>

    <div class="form-group">
        <label>Chọn ảnh mới (nếu muốn thay đổi):</label>
        <input type="file" name="image" class="form-control" accept="image/*" onchange="previewImage(event)" />
    </div>

    <div class="form-group">
        <img id="preview" style="max-height:150px; margin-top:10px; display:none;" />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <script>
        function previewImage(event) {
            const [file] = event.target.files;
            if (!file) {
                document.getElementById('preview').style.display = 'none';
                return;
            }
            const img = document.getElementById('preview');
            img.src = URL.createObjectURL(file);
            img.style.display = 'block';
        }
    </script>
}
