@model List<WebBookStore.Models.CartItem>

@{
    Layout = "/Areas/Customer/Views/Shared/_userMainLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book.Title</td> <!-- Display book title -->
                    <td>@item.Quantity</td> <!-- Display quantity -->
                    <td>@item.UnitPrice.ToString("C")</td> <!-- Display unit price (formatted as currency) -->
                    <td>@(item.Quantity * item.UnitPrice).ToString("C")</td> <!-- Display total price for the item -->
                    <td>
                        <!-- Remove Item Button -->
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Book.Id })" class="btn btn-danger">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Optionally, show the total cart price -->
    <div>
        <strong>Total Cart Price: </strong>
        @Model.Sum(item => item.Quantity * item.UnitPrice).ToString("C")
    </div>

    <!-- Checkout Button -->
    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
