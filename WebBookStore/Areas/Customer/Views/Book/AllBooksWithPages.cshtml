@model WebBookStore.ViewModels.BookFilterVM

@{
    Layout = "/Areas/Customer/Views/Shared/_userMainLayout.cshtml";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Tất cả sách</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active text-white">Toàn bộ sách</li>
    </ol>
</div>
<!-- Single Page Header End -->



<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                @if (Model != null && Model.Books.Any())
                {
                    <div class="container my-4">
                        <form method="get" asp-action="AllBooksWithPages">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Tác giả</label>
                                    <select name="authorId" class="form-select">
                                        <option value="">-- Tất cả --</option>
                                        @foreach (var author in Model.Authors)
                                        {
                                            <option value="@author.Id" @(Model.AuthorId == author.Id ? "selected" : "")>
                                                @author.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Thể loại</label>
                                    <select name="categoryId" class="form-select">
                                        <option value="">-- Tất cả --</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.Id" @(Model.CategoryId == category.Id ? "selected" : "")>
                                                @category.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Nhà xuất bản</label>
                                    <select name="publisherId" class="form-select">
                                        <option value="">-- Tất cả --</option>
                                        @foreach (var publisher in Model.Publishers)
                                        {
                                            <option value="@publisher.Id" @(Model.PublisherId == publisher.Id ? "selected" : "")>
                                                @publisher.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mt-3 text-center">
                                <button type="submit" class="btn btn-primary">Lọc</button>
                            </div>
                        </form>
                    </div>

                    @foreach (var book in Model.Books)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="rounded position-relative fruite-item">
                                <div class="fruite-img position-relative" style="height: 450px; overflow: hidden;">
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                                        <img src="@book.CoverUrl" class="img-fluid w-250 h-400 object-fit-cover rounded-top" alt="@book.Title">
                                    </a>

                                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                                        @book.Category.Name
                                    </div>

                                    @if (book.DiscountPrice.HasValue && book.DiscountPrice.Value > 0)
                                    {
                                        <span class="badge bg-danger position-absolute" style="top: 10px; right: 10px;">
                                            -@book.DiscountPrice.Value.ToString("0")%
                                        </span>
                                    }
                                </div>

                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                    <h4 class="text-truncate" style="max-width: 100%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@book.Title">
                                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                                            @book.Title
                                        </a>
                                    </h4>

                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                        @if (book.DiscountPrice.HasValue && book.DiscountPrice.Value > 0)
                                        {
                                            <div class="mb-2">
                                                <span class="fs-5 fw-bold me-2">
                                                    @book.FinalPrice.ToString("N0") VND
                                                </span>
                                                <span class="text-muted text-decoration-line-through">
                                                    @book.Price.ToString("N0") VND
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="fs-5 fw-bold mb-2">
                                                @book.Price.ToString("N0") VND
                                            </p>
                                        }

                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary">
                                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (ViewBag.TotalPages > 1)
                    {
                        <div class="col-12">
                            <div class="pagination d-flex justify-content-center mt-5">
                                <!-- Previous Page -->
                                <a href="@Url.Action("AllBooksWithPages", "Book", new { area = "Customer", page = ViewBag.CurrentPage - 1 })" class="rounded @((ViewBag.CurrentPage <= 1) ? "disabled" : "")">&laquo;</a>

                                <!-- Page Numbers -->
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <a href="@Url.Action("AllBooksWithPages", "Book", new { area = "Customer", page = i })" class="rounded @(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
                                }

                                <!-- Next Page -->
                                <a href="@Url.Action("AllBooksWithPages", "Book", new { area = "Customer", page = ViewBag.CurrentPage + 1 })" class="rounded @((ViewBag.CurrentPage >= ViewBag.TotalPages) ? "disabled" : "")">&raquo;</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Không có sách</p>
                }
            </div>
        </div>
    </div>
</div>
