@model IEnumerable<WebBookStore.Models.Category>

@{
    ViewData["Title"] = "Danh sách thể loại";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên thể loại</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cate in Model)
        {
            <tr>
                <td>
                    @if (cate.IsDeleted)
                    {
                        <span class="text-danger">@cate.Name (đã xóa mềm)</span>
                    }
                    else
                    {
                        <span>@cate.Name</span>
                    }
                </td>
                <td>@cate.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cate.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-danger btn-sm">Xóa mềm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
